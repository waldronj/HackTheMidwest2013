@{
    ViewBag.Title = "ManageLists";
}

@model HackMW2013.ViewModels.ManageTree.ManageTreesModel 

<h1>Manage Calling Trees</h1>

<div class="row">
    <div class="span6">
        @using (Html.BeginForm("AddTree", "ManageTree"))
        {
            <label>List Name:</label>
            @Html.EditorFor(x => x.Name)
            <br />
            <input type="submit" value="Create List" class="btn btn-primary btn-large" />
        }
    </div>
    <div class="span6">
        <h2>Calling Trees:</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Tree Name</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var tree in Model.Trees)
                {
                    <tr>
                        <td>@tree.Name</td>
                        <td>@Html.ActionLink("edit", "ViewTree", new {id = tree.Id})</td>
                        <td>@Html.ActionLink("remove", "RemoveTree", new {id = tree.Id})</td>
                    </tr>
                }               
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {


        });
    </script>
}